<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">

		<title>
			{% block title %}BASE
			{% endblock %}
		</title>

		{% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	</head>

	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item {% if current_menu is defined and current_menu == 'home' %} active {% endif %}">
						<a class="nav-link" href="{{ path('home') }}">Home</a>
					</li>
					<li class="nav-item" {% if current_menu is defined and current_menu == 'buy' %} active {% endif %}>
						<a class="nav-link" href="{{ path('property_index') }}">Acheter</a>
					</li>
					<li class="nav-item" {% if current_menu is defined and current_menu == 'admin' %} active {% endif %}>
						<a class="nav-link" href="{{ path('admin_property_index') }}">Admin</a>
					</li>
				</ul>
			</div>
		</nav>
		{% block body %}{% endblock %}

		{% block javascripts %}{% endblock %}

	</body>
</html>
